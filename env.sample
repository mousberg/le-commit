# ===========================================
# GhostBuster Environment Variables
# ===========================================

# Next.js Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_ENV=development

# ===========================================
# AI/LLM Services
# ===========================================

# Groq API Configuration
GROQ_API_KEY=your_groq_api_key
GROQ_API_URL=https://api.groq.com/openai/v1
GROQ_MODEL=llama3-8b-8192

# Alternative LLM providers (if needed)
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key

# ===========================================
# Database & Backend
# ===========================================

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Alternative Database (if using)
DATABASE_URL=postgresql://username:password@localhost:5432/ghostbuster

# ===========================================
# Authentication
# ===========================================

# JWT Secret for authentication
JWT_SECRET=your_jwt_secret_here
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# OAuth providers (if using)
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret

# ===========================================
# External APIs & Services
# ===========================================

# For profile data scraping and analysis
LINKEDIN_API_KEY=your_linkedin_api_key
GITHUB_API_TOKEN=your_github_personal_access_token

# Email service (for notifications)
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASSWORD=your_smtp_password
FROM_EMAIL=noreply@ghostbuster.dev

# File upload service (if using)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# ===========================================
# AI Agent Configuration
# ===========================================

# Model Context Protocol (MCP) settings
MCP_SERVER_URL=your_mcp_server_url
MCP_API_KEY=your_mcp_api_key

# AI processing settings
MAX_TOKENS=4000
TEMPERATURE=0.3
TOP_P=0.9

# Credibility scoring thresholds
CREDIBILITY_THRESHOLD_LOW=0.3
CREDIBILITY_THRESHOLD_HIGH=0.7

# ===========================================
# Deployment & Monitoring
# ===========================================

# Vultr deployment (if using)
VULTR_API_KEY=your_vultr_api_key
VULTR_INSTANCE_ID=your_vultr_instance_id

# Monitoring & Analytics
SENTRY_DSN=your_sentry_dsn
MIXPANEL_TOKEN=your_mixpanel_token

# ===========================================
# Rate Limiting & Security
# ===========================================

# Rate limiting configuration
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# CORS origins
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# ===========================================
# Development & Testing
# ===========================================

# Debug mode
DEBUG=true
LOG_LEVEL=debug

# Test environment
TEST_DATABASE_URL=postgresql://test_user:test_pass@localhost:5432/ghostbuster_test

# ===========================================
# Notes
# ===========================================

# 1. Copy this file to .env.local for local development
# 2. Never commit .env files to version control
# 3. Update production values in your deployment environment
# 4. Some services may require additional configuration
# 5. API keys should be obtained from respective service providers 